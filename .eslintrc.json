{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "block-scoped-var": "error",
        "curly": ["error", "multi-line"],
        "no-empty-function": "off",
        "no-labels": "error",
        "no-lone-blocks": "error",
        "no-useless-return": "off",
        "semi": "error",
        "eol-last": ["error", "always"]
    }
}